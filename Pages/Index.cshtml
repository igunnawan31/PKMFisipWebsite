@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link href="~/css/app.css" rel="stylesheet" />

<section id="Home" class="relative w-full h-full">
    <!-- Content -->
    <div class="relative z-10 flex items-center justify-center h-screen lg:h-auto">
        <div class="container mx-auto">
            <div class="flex flex-wrap">
                <div class="w-full px-2 lg:w-1/2 flex items-center justify-center lg:justify-start lg:pl-8">
                    <div class="text-center lg:text-left">
                        <h1 class="text-4xl font-bold md:text-5xl lg:text-6xl lg:text-left">
                            Taman Baca
                        </h1>
                        <h2 class="text-md animate-fadeInUp delay-150 lg:w-5/6 mt-5 lg:text-justify">
                            Nikmati membaca buku secara gratis dengan meminjam buku melalui TBM terdekat kamu,
                            selain itu juga nikmatin membaca buku secara online karena Taman Baca menyediakan
                            E-Book dengan juga AudioBook untuk kamu
                        </h2>
                        <button class="w-64 bg-blue-900 border-1 border-black mt-5 p-5 rounded-lg hover:bg-blue-400 hover:border-2 hover:border-black hover:text-black">
                            <h2 class="text-md font-bold text-white text-left">What we provide</h2>
                        </button>
                    </div>
                </div>
                <div class="grid grid-cols-3 gap-4 w-full lg:w-1/2 items-center justify-center mx-auto mt-20 lg:mt-0">
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 1" class="w-full h-full object-cover aspect-square">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 2" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 3" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 4" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 5" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 6" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 7" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 8" class="w-full h-full object-cover">
                    </div>
                    <div class="overflow-hidden rounded-md shadow-lg">
                        <img src="/images/gambar.jpeg" alt="Image 9" class="w-full h-full object-cover">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

